<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Final Proj</title>

    <!-- Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/css/setup/general.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/styles/css/products.css">
</head>

<body>
    <%- include('header.ejs', {page:'products'}) -%>

        <main class="products">
            <div class="header">
                <h1>products</h1>
            </div>
            <div class="header">
                <div class="blue-part"></div>
                <div class="image-part">
                    <img src="/styles/imgs/products/model.jpeg" alt="../styles/imgs/products/model.jpeg">
                    <span class="model-title">MAN</span>
                </div>

            </div>

            <div>
                <h1>Filter</h1>
                <button>Price</button>
                <h1>Sort By Name</h1>
                <input type="text">
            </div>

            <div class="clothes">

                <% for(let i=0; i< products.length; i++) { %>

                    <a class="image-container" href="/products/product/<%= products[i]._id %>">
                        <!-- <img src="<%= products[i].srcImg[0]?.contentType ? ('data:image/'+products[i].srcImg[0]?.contentType+';base64,'+products[i].srcImg[0]?.data.toString('base64')) : ('/styles/imgs/products/' + products[i].srcImg[0]?.data)%>" alt="product">  -->
                        <img src="<%= products[i].srcImg[0]?.includes('data:') ? products[i].srcImg[0] : ('/styles/imgs/products/' + products[i].srcImg[0])%>"
                            alt="product">
                        <div class="image-name">
                            <%= products[i].title %>
                        </div>
                        <div class="price">
                            <%= products[i].price %>$
                        </div>
                    </a>

                    <% } %>

            </div>
        </main>
        <%- include('footer.ejs') -%>

            <!-- Libraries  -->
            <script src="https://code.jquery.com/jquery-3.7.1.min.js"
                integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
            <script src="/js/products.js"></script>
</body>

</html>