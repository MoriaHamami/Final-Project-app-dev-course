<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title> Real Madrid | Products </title>
    <link rel="icon" href="/styles/imgs/header/real-madrid-logo.png" sizes="64x64">

    <!-- Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/css/setup/general.css">
    <link rel="stylesheet" href="/styles/css/setup/vars.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/styles/css/products.css">

</head>

<body>
    <!-- Adds header code here and send to it page val as "products" -->
    <%- include('header.ejs', {page:'products'}) -%>

    <main class="products">

        <section class="filter">
            <form>
                <label>
                    Max Price
                    <input type="range" max="<%= maxPrice %>" min="<%= minPrice %>" name="priceFilter"
                        value="<%= maxPrice %>" onchange="setPrice(event.target.value)">
                </label>
                <label>
                    Product Name
                    <input name="titleFilter" value="" onkeyup="setTitle(event.target.value)"
                        placeholder="Search product name">
                </label>
                <label for="catFilter">
                    Select Category
                    <select id="catFilter" name="catFilter" onchange="setCat(event.target.value)">
                        <% for(let i=0; i< cats.length; i++) { %>
                            <option value="<%= cats[i] %>">
                                <%= cats[i] %>
                            </option>
                        <% } %>
                    </select>
                </label>
                <button onclick="sortProductsBy('price')" class="sortByPriceBtn" type="button"><i
                        class="bi bi-caret-up"></i>
                    Sort By Price</button>
                <button onclick="sortProductsBy('title')" class="sortByTitleBtn" type="button"><i
                        class="bi bi-caret-up"></i>
                    Sort By Title</button>
            </form>
        </section>

        <div id="productsList">
            <!-- Go over all the products received and show each one in a card -->
            <% for(let i=0; i< products.length; i++) { %>
                <div class="image-container">
                    <a href="/products/product/<%= products[i]._id %>">
                        <!-- If the path of the products image has data received from an input put it as source, otherwise show image from local path -->
                        <img src="<%= products[i].srcImg[0] ? (products[i].srcImg[0]?.includes('data:') ? products[i].srcImg[0] : ('/styles/imgs/products/' + products[i].srcImg[0])) : ''%>"
                            alt="product">
                        <div class="image-name">
                            <%= products[i].title %>
                        </div>
                        <div class="price">
                            <%= products[i].price %>$
                        </div>
                    </a>
                    <!-- כפתור הלב להוספת לרשימת המשאלות -->
                    <button class="wishlist-btn" onclick="toggleWishlist(event, '<%= products[i]._id %>')">
                        <i class="bi bi-heart"></i>
                    </button>
                </div>
            <% } %>
        </div>

    </main>

    <!-- Adds footer code here -->
    <%- include('footer.ejs') -%>

    <!-- Libraries -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="/js/products.js"></script>
    <script>
        function toggleWishlist(event, productId) {
            event.preventDefault();
            event.stopPropagation();

            const button = event.currentTarget;
            const icon = button.querySelector('i');
            icon.classList.toggle('bi-heart');
            icon.classList.toggle('bi-heart-fill');
            button.classList.toggle('wishlist-active');

            // שליחת בקשה לשרת להוסיף את המוצר למועדפים
            $.ajax({
                url: '/wishlist/add',
                method: 'POST',
                data: { productId },
                success: function(response) {
                    console.log('Product added to wishlist');
                },
                error: function(error) {
                    console.error('Error adding product to wishlist', error);
                }
            });
        }
    </script>
</body>

</html>
