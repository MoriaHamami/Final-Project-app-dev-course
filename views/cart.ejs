<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Final Proj</title>
    <!-- Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/styles/css/cart.css">
</head>
<body>
    <header>
        <img src="/styles/imgs/cart/logo.webp" alt="logo" style="width: 132px; height: 59.61px;">
    </header>
    <main class="cart">
        <div class="col-8">
            <div class="orderDetails">
                <div class="customerD">
                    <h4>Your details</h4>
                    <span class="login">Do you already have an account? Log in</span>
                    <div class="fullName">
                        <input type="text" placeholder="Full Name *">
                    </div>
                    <div class="contact-info">
                        <div class="e">
                            <input type="email" placeholder="Email *">
                        </div>
                        <div class="tel">
                            <input type="tel" placeholder="Phone Number *">
                        </div>
                    </div>
                    <hr>
                    <div class="shipmentD">
                        <h4>Shipping Address</h4>
                        <div class="country">
                            <input type="text" placeholder="Country *" />
                        </div>
                        <div class="adress">
                            <input type="text" placeholder="Adress *">
                        </div>
                        <div class="houseType">
                            <input type="text" placeholder="Apartment, suite, etc. (optional)">
                        </div>
                        <div class="house-info">
                            <div class="code">
                                <input type="text" placeholder="Postal code *">
                            </div>
                            <div class="city">
                                <input type="text" placeholder="City *">
                            </div>
                        </div>
                        <div class="btn-container">
                            <a href="#" class="btn btn-primary" role="button" data-bs-toggle="button">Continue to shipping</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="shopping-cart">
            <h2>Your basket | <%= cartItems.length %></h2> 
            <div class="product-container">
                <% cartItems.forEach((item, index) => { %>
                <div class="product">
                    <img src="<%= item?.srcImg[0] ? (item?.srcImg[0]?.includes('data:') ? item?.srcImg[0] : ('/styles/imgs/products/' + item?.srcImg[0])) : ''%>" alt="מוצר" class="product-image">
                    <div class="product-info">
                        <span class="product-name"><b><%= item?.title %></b></span>
                        <span class="product-Size">Size: <%= item?.size %></span>
                        <span class="product-playerName">Player Name : <%= item?.favePlayer %> </span>
                        <hr>
                        <span class="product-Price"><%= item?.price %>$</span>
                    </div>
                </div>
                <div class="input-group">
                    <div class="icon-container">
                        <span class="icon-text">Remove</span>
                        <i class="bi-trash3" onclick="removeItem('<%= item._id %>')"></i>
                    </div>
                </div>
                <% }); %>
                <!-- More products here -->
            </div>

            <div class="checkout">
                <div class="container">
                    <div class="row">
                        <hr>
                        <div class="col">
                            <h4>Total:</h4>
                        </div>
                        <div class="col text-center">
                            <h4><%= cartItems.totalAmount %> $</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/cart.js"></script>
</body>
</html>