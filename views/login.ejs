<!DOCTYPE html>
<html lang="en">
<head></head>
<body>
    <!-- Form that sends a post method to /login route -->
    <form action="/login" method="post">
        <input name="username">
        <input name="password" type="password">
        <input type="submit">
    </form>

<!-- or login with facebook -->
    <a href="/facebook/auth/facebook" class="waves-effect waves-light btn social facebook">
                <i class="fa fa-facebook"></i> Sign in with facebook
              </a>

    <!-- In order to register, the client will be sent to the register page -->
    <a href="/login/register">Register</a>

    <script src="https://accounts.google.com/gsi/client" async defer></script>
</body>
</html>