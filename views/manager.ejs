<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Metadata and page settings -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real Madrid | Manager Area</title>
    <link rel="icon" href="/styles/imgs/header/real-madrid-logo.png" sizes="64x64"> <!-- Favicon -->

    <!-- Libraries and stylesheets -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"> <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="/styles/css/setup/vars.css"> <!-- Custom variables -->
    <link rel="stylesheet" href="/styles/css/setup/font-face.css"> <!-- Custom fonts -->
    <link rel="stylesheet" href="/styles/css/setup/general.css"> <!-- General styles -->
    <link rel="stylesheet" href="/styles/css/manager.css"> <!-- Page-specific styles -->

</head>

<body>
    <!-- Include the header with 'manager' as the current page -->
    <%- include('header.ejs', {page:'manager'}) -%>
    
    <main class="manager">
        <div class = headline>
            <h1>Manager Area</h1>
        </div>

        <section class="personal-info">
            <article>
                <!-- Manager's profile image -->
                <img class="userImg"
                    src="<%= manager.imgURL?.includes('data:') ? manager.imgURL : ('/styles/imgs/clients/' + manager.imgURL) %>" />
            </article>

            <article>
                <!-- Manager's name and date created -->
                <p class="name">Name: <%= manager.fullname %></p>
                <p class="email">Member since: <%= manager.dateCreated.toLocaleDateString() %> at 
                    <%= manager.dateCreated.toLocaleTimeString([], { hour: '2-digit' , minute: '2-digit' }) %>
                </p>
                <!-- Link to personal area -->
                <a href="/client" class="button">
                    Personal area
                </a>
            </article>
        </section>

        <section class="add-options">
            <!-- List of options to add various content -->
            <ul>
                <li onclick="onAddTicket()">
                    <i class="bi bi-plus"></i>
                    Add ticket
                </li>
                <li onclick="onAddNews()">
                    <i class="bi bi-plus"></i>
                    Add news
                </li>
                <li onclick="onAddProduct()">
                    <i class="bi bi-plus"></i>
                    Add product
                </li>
                <li onclick="onAddFacebookPost()">
                    <i class="bi bi-plus"></i>
                    Add facebook post
                </li>
                <li onclick="onEditAbout()">
                    <i class="bi bi-pencil"></i>
                    Edit about page
                </li>
                <li onclick="onGetClientsPage()">
                    <i class="bi bi-person"></i>
                    Clients list
                </li>
            </ul>
        </section>

        <section class="analytics">
            <h3>Analytics</h3>
            <h4>Clients per year</h4>
            <div id="graph"></div> <!-- Placeholder for clients per year graph -->
            <h4 class="bar-graph-head">Products per category</h4>
            <svg id="chart"></svg> <!-- Placeholder for products per category chart -->
        </section>

    </main>
    <!-- Include the footer -->
    <%- include('footer.ejs') -%>

    <!-- jQuery library -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <!-- D3JS library -->
    <script src="https://d3js.org/d3.v4.min.js"></script>

    <!-- Local scripts -->
    <script src="/js/manager.js"></script>
</body>

</html>
