<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Final Proj</title>

    <!-- Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/styles/css/setup/font-face.css">
    <link rel="stylesheet" href="/styles/css/setup/general.css">
    <link rel="stylesheet" href="/styles/css/edit-shirt.css">

</head>

<body class="edit-shirt-body">

    <!-- Include header with the specified page identifier -->
    <%- include('header.ejs', { page: 'edit-shirt' }) -%>

    <main class="edit-shirt-page">
        <div class="edit-shirt">
            <!-- Canvas for drawing on the shirt template -->
            <canvas id="myCanvas" width="500" height="500"></canvas>

            <span class="remark">**Anything drawn outside the shirt template lines, won't be printed on to actual shirt.</span>
        </div>
        <div class="buttons-container">

            <!-- Color selection for pen -->
            <h3>Pen color</h3>
            <div id="colorPicker">
                <button class="color" style="background-color: red;"></button>
                <button class="color" style="background-color: blue;"></button>
                <button class="color" style="background-color: green;"></button>
                <button class="color" style="background-color: orange;"></button>
                <button class="color" style="background-color: yellow;"></button>
                <button class="color" style="background-color: pink;"></button>
                <button class="color" style="background-color: lightblue;"></button>
                <button class="color" style="background-color: brown;"></button>
                <button class="color" style="background-color: black;"></button>
                <button class="color" style="background-color: white;"></button>
                <button class="color" style="background-color: purple;"></button>
                <button class="color" style="background-color: grey;"></button>
            </div>

            <!-- Color selection for shirt -->
            <h3>Shirt color</h3>
            <div id="colorShirtPicker">
                <div class="color" style="background-color: red;" onclick="changeShirtColor('red')"></div>
                <div class="color" style="background-color: blue;" onclick="changeShirtColor('blue')"></div>
                <div class="color" style="background-color: green;" onclick="changeShirtColor('green')"></div>
                <div class="color" style="background-color: orange;" onclick="changeShirtColor('orange')"></div>
                <div class="color" style="background-color: yellow;" onclick="changeShirtColor('yellow')"></div>
                <div class="color" style="background-color: pink;" onclick="changeShirtColor('pink')"></div>
                <div class="color" style="background-color: lightblue;" onclick="changeShirtColor('lightblue')"></div>
                <div class="color" style="background-color: rgb(76, 10, 10);" onclick="changeShirtColor('rgb(76, 10, 10)')"></div>
                <div class="color" style="background-color: black;" onclick="changeShirtColor('black')"></div>
                <div class="color" style="background-color: white;" onclick="changeShirtColor('white')"></div>
                <div class="color" style="background-color: purple;" onclick="changeShirtColor('purple')"></div>
                <div class="color" style="background-color: grey;" onclick="changeShirtColor('grey')"></div>
            </div>

            <!-- Input for adding text to the shirt -->
            <span class="text-container">
                <input type="text" id="textInput" placeholder="Type text">
                <button id="addTextBtn">Add text</button>
            </span>
            
            <!-- Dropdown for selecting shirt size -->
            <select name="size" onchange="updateSize(event)">
                <option value="XS">XS</option>
                <option value="S">S</option>
                <option value="M">M</option>
                <option value="L">L</option>
                <option value="XL">XL</option>
            </select>
            
            <!-- Buttons for clearing canvas and saving design -->
            <button id="clearBtn">Restart</button>
            <button id="saveBtn">Add to cart</button>
        </div>

    </main>

    <!-- Libraries -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="/js/edit-shirt.js"></script>

</body>

</html>
