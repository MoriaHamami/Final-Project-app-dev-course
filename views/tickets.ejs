<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Final Proj</title>
    <!-- Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/styles/css/tickets.css">
</head>

<body>
    <%- include('header.ejs', {page:'tickets'}) -%>
    <hr>
    <main class="tickets">
        <div class="background-image">
            <h1>Tickets</h1>
        </div>

        <div class="filters mb-4">
            <span class="me-3">
                <input name="titleFilter" value="" onkeyup="setTitle(event.target.value)" class="form-control" placeholder="Title">
            </span>  

            <span class="me-3">
                <select id="stadiumFilter" onchange="filterByStadium(event.target.value)" class="form-select" aria-label="Stadium Filter">
                    <option value="">Select Stadium</option>
                    <% 
                    const uniqueStadiums = new Set();
                    ALLTickets.forEach(ticket => {
                        uniqueStadiums.add(ticket.stadium);
                    });
                    uniqueStadiums.forEach(stadium => { %>
                        <option value="<%= stadium %>"><%= stadium %></option>
                    <% }); %>
                </select>
            </span>

            <span class="btn-group btn-group-lg" role="group" aria-label="...">
                <button type="button" class="btn btn-secondary" onclick="setMonth()">All Tickets</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(1)">Jan</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(2)">Feb</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(3)">Mar</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(4)">Apr</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(5)">May</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(6)">Jun</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(7)">Jul</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(8)">Aug</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(9)">Sep</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(10)">Oct</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(11)">Nov</button>
                <button type="button" class="btn btn-secondary" onclick="setMonth(12)">Dec</button>
            </span>
        </div>

        <div class="cards-container" id="tickets">
            <% if (ALLTickets.length > 0) { %>
                <% for (let i = 0; i < ALLTickets.length; i++) { %>
                <div class="card" style="width: 18rem;" data-stadium="<%= ALLTickets[i].stadium %>">
                    <div class="battle">
                        <div class="team">
                            <img src="../styles/imgs/tickets/real.webp" id="real" alt="real">
                            <span>Real Madrid<br></span>
                        </div>
                        <div>
                            <img src="https://assets.realmadrid.com/is/content/realmadrid/4oogyu6o156iphvdvphwpck10-logo?$Mobile$&wid=144&hei=144"
                                class="card-img-top" alt="championleague">
                        </div>
                        <div class="team">
                            <img 
                                src="<%= ALLTickets[i].opImg.startsWith('data:') ? ALLTickets[i].opImg : '/styles/imgs/tickets/' + ALLTickets[i].opImg %>" 
                                id="byren" 
                                alt="byren"
                            >
                            <span>
                                <%= ALLTickets[i].opponent %><br>
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">
                            <%= ALLTickets[i].title %>
                        </h4>
                        
                            <div>
                                <i class="bi bi-calendar3"></i>
                                <span>
                                    <%= ALLTickets[i].date.toLocaleDateString() %>
                                </span>
                            </div>
                            <div>
                                <i class="bi bi-clock"></i>
                                <span>
                                    <%= ALLTickets[i].date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }) %>
                                </span>
                            </div>
                       
                        <div class="icon-text-container">
                            <div>
                                <i class="bi bi-geo-alt"></i>
                                <span>
                                    <%= ALLTickets[i].stadium %>
                                </span>
                            </div>
                        </div>
                        <div class="icon-text-container">
                            <div>
                                <i class="bi bi-ticket-detailed"></i>
                                <span id="priceof_tic"><%= ALLTickets[i].price %>â‚¬</span>
                            </div>
                        </div>
                        <label>
                            Add more tickets here
                            <input id="amount" type="number" value="1" name="add more tickets here" min="1" max="10">
                        </label>
                        
                        <ul class="list-group list-group-flush">
                            <a href="#" class="btn btn-primary"><i class="bi bi-gem"></i>Buy ticket NOW</a>
                        </ul>
                    </div>
                </div>
                <% } %>
            <% } else { %>
                <p>No tickets available</p>
            <% } %>
        </div>
        
    </main>
    <%- include('footer.ejs') -%>
    <!-- Libraries  -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="/js/tickets.js"></script>
    <script>
        function filterByStadium(stadium) {
            var cards = document.querySelectorAll('.cards-container .card');
            cards.forEach(card => {
                if (stadium === "" || card.getAttribute('data-stadium') === stadium) {
                    card.style.display = "";
                } else {
                    card.style.display = "none";
                }
            });
        }
    </script>
</body>

</html>
