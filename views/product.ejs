<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Final Proj</title>
    <!-- Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/styles/css/setup/general.css">
    <link rel="stylesheet" href="/styles/css/product.css">
</head>

<body>
    <!-- Adds header code here and send to it page val as "product" -->
    <%- include('header.ejs', {page:'product'}) -%>

    <main class="product">
        <div class="information_product">
            <input type="hidden" id="productId" value="<%= product.id %>">
            <h5 class="catgory"><%= product.title %></h5>
            <h1 class="product_type"><%= product.cat %></h1>
            <text class="product_price"><%= product.price %></text>
            <div class="product_sizes">
                <hr>
                <% product.sizes.forEach((size, index) => { %>
                    <input type="radio" class="btn-check" name="options-base" id="<%= 'option' + index %>" autocomplete="off">
                    <label class="btn" for="<%= 'option' + index %>"><%= size %></label>
                <% }) %>
                <hr>
            </div>
            <select class="form-select" id="quantitySelect">
                <option selected value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <button class="addTOcart" onclick="addToCart('<%= product._id %>', '<%= product.sizes[0] %>')">
                <i class="bi bi-cart-plus"></i> Add to shopping cart
            </button>
            <button class="addTOcart"><i class="bi bi-cart-check"></i> Buy now</button>
            <%if(isManager) {%>
                <button class="editProduct" onclick="getEditProductPage('<%= product._id %>')">
                    <i class="bi bi-pencil"></i>
                    Edit product
                </button>
                <%}%>
        </div>
        <div class="product_images">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <% product.srcImg.forEach((imgSrc, index) => { %>
                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                            <img class="d-block" src="<%= imgSrc.includes('data:') ? imgSrc : ('/styles/imgs/products/' + imgSrc) %>" alt="Product img">
                        </div>
                    <% }) %>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
                <ol class="carousel-indicators">
                    <% product.srcImg.forEach((_, index) => { %>
                        <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>"></li>
                    <% }) %>
                </ol>
            </div>
        </div>
    </main>

    <!-- Adds footer code here -->
    <%- include('footer.ejs') -%>

    <!-- Libraries -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
        integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"
        integrity="sha384-+YQ4JLhjyBLPDQt//I+STsc9iw4uQqACwlvpslubQzn4u2UU2UFM80nGisd026JF"
        crossorigin="anonymous"></script>
    <script src="/js/product.js"></script>

    <script>
        async function addToCart(productId, size) {
            try {
                const response = await $.ajax({
                    url: '/cart/add',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        productId: productId,
                        size: size
                    })
                });

                alert('Product added to cart successfully');
            } catch (e) {
                console.log('Error:', e);
                alert('Error adding product to cart');
            }
        }
    </script>
</body>

</html>